<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fucarrentingsystem.controller.AdminDashboardController">
    <top>
        <VBox spacing="10.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Bảng điều khiển quản trị - Hệ thống thuê xe FU" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="welcomeLabel" textFill="WHITE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Button text="Đăng xuất" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <!-- Car Management Tab -->
            <Tab text="Quản lý xe">
                <BorderPane>
                    <top>
                        <VBox spacing="10.0">
                            <padding>
                                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                            </padding>

                            <Label text="Thông tin xe">
                                <font>
                                    <Font name="System Bold" size="16.0"/>
                                </font>
                            </Label>

                            <GridPane hgap="10.0" vgap="10.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0"/>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0"/>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0"/>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0"/>
                                </columnConstraints>

                                <Label text="Tên xe:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <TextField fx:id="carNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                <Label text="Năm sản xuất:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                                <TextField fx:id="carYearField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                                <Label text="Màu sắc:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <TextField fx:id="carColorField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                <Label text="Số chỗ:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                                <TextField fx:id="carCapacityField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                                <Label text="Hãng sản xuất:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <ComboBox fx:id="carProducerCombo" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                <Label text="Ngày nhập khẩu:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                                <DatePicker fx:id="carImportDatePicker" maxWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                                <Label text="Giá thuê:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <TextField fx:id="carPriceField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                <Label text="Trạng thái:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                                <ComboBox fx:id="carStatusCombo" maxWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

                                <Label text="Mô tả:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                <TextArea fx:id="carDescriptionArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="3"/>
                            </GridPane>

                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Button fx:id="saveCarButton" text="Lưu" onAction="#handleSaveCar" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                                <Button fx:id="deleteCarButton" text="Xóa" onAction="#handleDeleteCar" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                                <Button fx:id="clearCarButton" text="Xóa trống" onAction="#handleClearCar"/>
                            </HBox>
                        </VBox>
                    </top>

                    <center>
                        <VBox spacing="10.0">
                            <padding>
                                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                            </padding>

                            <Label text="Danh sách xe">
                                <font>
                                    <Font name="System Bold" size="14.0"/>
                                </font>
                            </Label>

                            <TableView fx:id="carTableView" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="carIdColumn" text="ID" prefWidth="50.0"/>
                                    <TableColumn fx:id="carNameColumn" text="Tên xe" prefWidth="150.0"/>
                                    <TableColumn fx:id="carYearColumn" text="Năm" prefWidth="80.0"/>
                                    <TableColumn fx:id="carColorColumn" text="Màu sắc" prefWidth="100.0"/>
                                    <TableColumn fx:id="carStatusColumn" text="Trạng thái" prefWidth="100.0"/>
                                    <TableColumn fx:id="carPriceColumn" text="Giá thuê" prefWidth="100.0"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </center>
                </BorderPane>
            </Tab>

            <!-- Customer Management Tab -->
            <Tab text="Quản lý khách hàng">
                <VBox spacing="10.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>

                    <Label text="Danh sách khách hàng">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>

                    <TableView fx:id="customerTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="customerIdColumn" text="ID" prefWidth="50.0"/>
                            <TableColumn fx:id="customerNameColumn" text="Họ tên" prefWidth="200.0"/>
                            <TableColumn fx:id="customerEmailColumn" text="Email" prefWidth="200.0"/>
                            <TableColumn fx:id="customerMobileColumn" text="Số điện thoại" prefWidth="150.0"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Rental Report Tab -->
            <Tab text="Báo cáo thuê xe">
                <VBox spacing="15.0">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>

                    <Label text="Tạo báo cáo thuê xe">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>

                    <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <Label text="Ngày bắt đầu:"/>
                        <DatePicker fx:id="reportStartDatePicker"/>

                        <Label text="Ngày kết thúc:"/>
                        <DatePicker fx:id="reportEndDatePicker"/>

                        <Button fx:id="generateReportButton" text="Tạo báo cáo" onAction="#handleGenerateReport" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                    </HBox>

                    <Label text="Kết quả báo cáo:">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>

                    <TextArea fx:id="reportTextArea" editable="false" VBox.vgrow="ALWAYS" style="-fx-font-family: 'Courier New';"/>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>

